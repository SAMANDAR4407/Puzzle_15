<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_main_menu_layout"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/difficulty" />

    <TextView
        android:id="@+id/level_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Choose your level"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_resume"
        style="@style/STROKE"
        android:layout_width="200dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_option"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="resume"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_easy"
        style="@style/STROKE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_resume"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="easy"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_medium"
        style="@style/STROKE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_easy"
        android:text="medium"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_hard"
        style="@style/STROKE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_medium"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="hard"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_main_menu"
        style="@style/STROKE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_hard"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text=" main menu"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>